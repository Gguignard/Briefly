# --- Supabase (Story 1.2) ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# --- Clerk Auth (Story 3.x) ---
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# --- LLM (Story 5.x) ---
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# --- Email Ingestion / Webhooks (Story 4.x) ---
# Cloudflare Email Routing → webhook (pas d'API key requise, config dans Cloudflare Dashboard)
CLOUDFLARE_EMAIL_WEBHOOK_SECRET=
STRIPE_WEBHOOK_SECRET=
CLERK_WEBHOOK_SECRET=

# --- BullMQ / Redis (Story 4.4) ---
REDIS_URL=

# --- Monitoring / Logs (Story 1.6) ---
NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN est REQUIS en CI pour l'upload des source maps
# Générer via Sentry > Settings > Auth Tokens (scope: project:releases)
SENTRY_AUTH_TOKEN=
SENTRY_ORG=briefly
SENTRY_PROJECT=briefly-nextjs

# --- App ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
